<style>
  .cube {
    perspective: 1000px;
  }
  
  .cube-inner {
    width: 150px;
    height: 150px;
    position: relative;
    transform-style: preserve-3d;
    animation: spin 10s infinite linear;
  }

  .cube-face {
    position: absolute;
    width: 150px;
    height: 150px;
    border: 2px solid rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
    color: #333;
  }

  /* Spin animation */
  @keyframes spin {
    from {
      transform: rotateX(0deg) rotateY(0deg);
    }
    to {
      transform: rotateX(360deg) rotateY(360deg);
    }
  }

  /* Positioning the cube faces */
  .front  { transform: rotateY(  0deg) translateZ(75px); }
  .back   { transform: rotateY(180deg) translateZ(75px); }
  .right  { transform: rotateY( 90deg) translateZ(75px); }
  .left   { transform: rotateY(-90deg) translateZ(75px); }
  .top    { transform: rotateX( 90deg) translateZ(75px); }
  .bottom { transform: rotateX(-90deg) translateZ(75px); }
</style>

<div class="flex items-center justify-center h-screen">
  <div class="cube">
    <div class="cube-inner">
      <div class="cube-face front bg-blue-500/80">JS</div>
      <div class="cube-face back bg-red-500/80">CSS</div>
      <div class="cube-face right bg-green-500/80">HTML</div>
      <div class="cube-face left bg-yellow-500/80">Java</div>
      <div class="cube-face top bg-purple-500/80">C++</div>
      <div class="cube-face bottom bg-pink-500/80">Python</div>
    </div>
  </div>
</div>
