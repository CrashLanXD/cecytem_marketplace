<header
  class="bg-white w-full fixed top-0 z-20 h-16 dark:bg-black"
  transition:persist
>
  <div class="flex justify-between py-3 px-6 h-full">
    <div class="justify-center items-center flex">
      <h2
        class="text-2xl font-semibold tracking-widest uppercase h-fit bg-clip-text bg-gradient-to-r text-transparent from-neutral-700 to-neutral-900 dark:from-neutral-50 dark:to-neutral-300"
      >
        cecymarket
      </h2>
    </div>

    <nav class="ml-2 flex w-32 justify-between">
      <button
        class="flex cursor-pointer items-center gap-x-1 rounded-md py-2 px-4 hover:bg-gray-100 group transition-all"
        title="favorites"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-6 text-neutral-500 group-hover:text-neutral-800 dark:text-neutral-100"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
            clip-rule="evenodd"></path>
        </svg>
      </button>

      <button
        class="flex cursor-pointer items-center gap-x-1 rounded-md py-2 px-4 hover:bg-gray-100 group"
        title="cart"
      >
        <div class="relative">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="size-6 text-neutral-500 group-hover:text-neutral-800 dark:text-neutral-100"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"
            ></path>
          </svg>
          <!-- <span class="absolute -top-2 -right-2 flex h-4 w-4 items-center justify-center rounded-full bg-red-500 p-2 text-xs text-white"></span> -->
        </div>
      </button>
    </nav>
  </div>
</header>

