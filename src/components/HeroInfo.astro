<div class="mt-20 px-4 flex flex-col lg:flex-row items-start">
  <div class="flex items-center mb-2 w-full">
    <h1
      class="text-2xl md:text-5xl font-bold tracking-tight text-[#121212] dark:text-white mr-auto md:ml-7 text-center md:text-start w-full"
    >
      CECyTEM
    </h1>
  </div>
  <span
    class="m-auto mb-2 text-xl text-black dark:text-white opacity-80 font-semibold md:text-2xl md:ml-7 md:text-start w-full flex float-end"
  >
    <time class="w-full text-end" id="currentDate" datetime=""></time>
  </span>
</div>

<script>
  const $timeElement = document.getElementById("currentDate");
  function getCurrentDate() {
    let currentDate = new Date();

    let monthNames = [
      "Enero",
      "Febrero",
      "Marzo",
      "Abril",
      "Mayo",
      "Junio",
      "Julio",
      "Agosto",
      "Septiembre",
      "Octubre",
      "Noviembre",
      "Diciembre",
    ];

    let dayNames = [
      "Domingo",
      "Lunes",
      "Martes",
      "Miércoles",
      "Jueves",
      "Viernes",
      "Sábado",
    ];

    var day = dayNames[currentDate.getDay()];
    var date = currentDate.getDate();
    var month = monthNames[currentDate.getMonth()];
    var year = currentDate.getFullYear();

    if ($timeElement) {
      $timeElement.textContent = `${day} ${date} de ${month} del ${year}`;
      $timeElement.setAttribute("datetime", currentDate.toISOString());
    }
  }
  getCurrentDate();
</script>
