---
import { PRODUCTS } from "@/constants/products";

import ProductCard from "@/components/ProductCard.astro";
---

<section>
  <div id="products" class="mx-auto container py-16 sm:py-20">
    <h2
      class="w-full font-bold text-center mb-8 text-5xl uppercase bg-clip-text text-transparent bg-gradient-to-r from-neutral-700 to-neutral-900 dark:from-white dark:to-white tracking-wider"
    >
      nuestros productos
    </h2>
    <div class="grid gap-12 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gridXL">
      {PRODUCTS.map((product) => <ProductCard product={product} />)}
    </div>
  </div>
</section>

<style>
  @media (min-width: 1750px) {
    .gridXL {
      grid-template-columns: repeat(4, minmax(0, 1fr));
      max-width: 95rem;
    }
  }
</style>
