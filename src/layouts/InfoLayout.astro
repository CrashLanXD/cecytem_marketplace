---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/HeaderInfo.astro";
import Footer from "../components/FooterInfo.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
const description = "";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="author" content="Eduardo Sanchez Hernandez" />
    <meta name="theme-color" content="#008c72" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-neutral-100 dark:bg-neutral-950">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
