---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/HeaderInfo.astro";
import Footer from "../components/FooterInfo.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
const description = "";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="author" content="Eduardo Sanchez Hernandez" />
    <meta name="theme-color" content="#008c72" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-neutral-100 dark:bg-neutral-950">
    <div class="min-h-screen w-full  absolute -z-10">
      <div
        class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,#000_70%,transparent_110%)] dark:bg-[linear-gradient(to_right,#000_1px,transparent_1px),linear-gradient(to_bottom,#000_1px,transparent_1px)]"
      >
      </div>
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
