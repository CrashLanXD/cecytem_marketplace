---
import ProductCard from "../components/ProductCard.astro";
import { type APIFakeStore } from "../types/api";

export const prerender = false;
// const res = await fetch("https://api.escuelajs.co/api/v1/products?offset=0&limit=30");
// const products = (await res.json()) as APIFakeStore[];
import products from "../utils/shop.json";
---

<section>
  <div class="mx-auto container py-16 sm:py-20">
    <h2 class="w-full font-bold text-center mb-8 text-5xl">PRODUCTS</h2>
    <div class="grid gap-12 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gridXL">
      {
        products.map(({id, title, price, description, images}) => (
          <ProductCard id={id} title={title} price={price} images={images}/>
        ))
      }
    </div>
  </div>
</section>

<style>
  @media (min-width: 1750px) {
    .gridXL {
      grid-template-columns: repeat(4, minmax(0, 1fr));
      max-width: 95rem;
    }
  }
</style>
